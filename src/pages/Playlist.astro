<!doctype html>
---
const song= ["Sail", "Kill Your Heores", "Not Your Fault", "Panoramic View", "I Am", "All I Need", "Table For One"];
---
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body><div class="Head">
        <ul class="ul1">
            <li><a href="/">Home</a></li>
            <li><a href="$">About</a></li>
            <li><a href="/News">News</a></li>
            <li><a href="/Playlist">Playlist</a></li>
        </ul>
    <div class="Bod">
        <h1 class="awol">Awolnation Songs</h1>
    <div class="songs">
    <ul class="awollist">
        {song.map((song) => (<li>{song}</li>))}
    </ul>
    </div>
    <button id="button1">Add your Song Bro</button>
    <input type="text" class="addsong" placeholder="Add your Song Bro" />
    </div>
        <footer>
            <p>Welcome to the Band Website</p>
        </footer>
    </div>
    <script src="/src/Java/Java.js">

        </script>
        <style>
    .Bod{
        text-align: center;
		font-size: larger;
		background-image: url(awol.jpg);
		background-position: center center;
		background-repeat: no-repeat;
		background-size: cover;
		background-attachment: fixed;
		opacity: 50%;
    }
    .awol{
    margin: 0%;
    padding-bottom: 50px;
    padding-top: 50px;
    text-transform: uppercase;
    font-weight: bold;
    text-shadow: rgb(16, 16, 12) 1px 0 10px;
    color: #fbfb1e;
    background: rgba(17, 22, 20, 0.4);
    }
    .awollist{
        list-style: none;
        margin: 0%;
        padding-bottom: 50px;
        padding-top: 50px;
    }
    .songs{
      color: #fbfb1e;
      text-transform: uppercase;
      font-weight: bold;
      text-shadow: rgb(222, 237, 19) 3px 0 10px;
      background: rgba(17, 22, 20, 0.4);
    }
    .button1{
      color: #fbfb1e;
      text-transform: uppercase;
      font-weight: bold;
      text-shadow: rgb(222, 237, 19) 3px 0 10px;
    }
    .Band{
		background-image:  linear-gradient(rgba(1, 197, 135, 0.984), #ecf00d);
		background-clip: text;
		-webkit-text-fill-color: transparent;
		background-color: rgba(1, 197, 135, 0.984);
		padding-top: 200px;
	    padding-bottom: 200px;
	    text-transform: uppercase;
	}
    .ul1{
	display: flex;
    justify-content: space-between;
	padding-top: 50px;
	padding-bottom: 50px;
	margin: 0%;
	padding-right: 20px;
	list-style: none;
	background: rgb(27, 45, 39);
}
ul a{
	background-image:  linear-gradient(rgba(1, 197, 135, 0.984), #ecf00d);
	background-clip: text;
	-webkit-text-fill-color: transparent;
	background-color: rgba(1, 197, 135, 0.984);
	text-transform: uppercase;
	font-size: larger;
	font-weight: bold;
	text-decoration: none;
}
.Head{
	display: flex;
	flex-direction: column;
	background: radial-gradient(rgb(27, 45, 39) 300px,rgb(96, 201, 166));
}
footer{
	padding-top: 50px;
	padding-bottom: 50px;
	text-transform: uppercase;
	text-spacing-trim: 20%;
	color: #4fa83d;
	background: rgb(27, 45, 39);
	text-align: center;
	font-size: larger;
	font-weight: bold;
	text-decoration: none;
}
html body{
width: 100%;
height: 100%;
margin: 0;
padding: 0;
box-sizing: border-box;
}
        </style>
    </body>
    </html>